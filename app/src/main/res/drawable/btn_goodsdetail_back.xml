<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 没有焦点时的背景图片 -->
    <item android:state_enabled="true" android:state_window_focused="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/dark_red"/>
        </shape>
    </item>

    <!-- 没有焦点时的背景图片 -->
    <item android:state_enabled="false" android:state_window_focused="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/dark_red"/>
        </shape>
    </item>

    <!-- 触摸模式按下时的背景图片 -->
    <item  android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/dark_red"/>
            <stroke android:color="@color/orange"
                android:width="3dp"/>
            <padding android:top="5dp"
                android:bottom="5dp"/>
        </shape>

    </item>

    <!-- 获得焦点时的图片背景 -->
    <item  android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/dark_red"/>
            <stroke android:color="#0099FF"
                android:width="3dp"/>
            <padding android:top="5dp"
                android:bottom="5dp"/>
        </shape>

    </item>
</selector>