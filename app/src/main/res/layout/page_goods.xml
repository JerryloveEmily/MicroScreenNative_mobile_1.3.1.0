        android:layout_margin="10dp"
        android:background="@color/red"
        />
    <View android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:layout_margin="10dp"
        android:background="@color/red"
        />
    <View android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:layout_margin="10dp"
        android:background="@color/red"
        />
    <View android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
