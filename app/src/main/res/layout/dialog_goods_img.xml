<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/translusent"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:padding="30dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical|right"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_marginLeft="15dp"
            android:background="@drawable/pref_picture"
            android:id="@+id/btn_goods_img_pre"
            />
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent"
        android:id="@+id/vp_goods_img_content"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:padding="30dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical|left"
        android:orientation="horizontal"
        >
        <Button

            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_marginLeft="15dp"
            android:background="@drawable/next_picture"
            android:id="@+id/btn_goods_img_next"
            android:focusable="true"
            />
    </LinearLayout>
</LinearLayout>
